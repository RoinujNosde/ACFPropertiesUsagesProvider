<idea-plugin>
    <id>com.github.roinujnosde.acfpropertiesusagesprovider</id>
    <name>ACFPropertiesUsagesProvider</name>
    <vendor>roinujnosde</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>

    <extensions defaultExtensionNs="com.intellij">
        <properties.implicitPropertyUsageProvider
                implementation="com.github.roinujnosde.acfpropertiesusagesprovider.extentionpoints.ACFImplicitPropertyUsageProvider"/>
    </extensions>
</idea-plugin>
